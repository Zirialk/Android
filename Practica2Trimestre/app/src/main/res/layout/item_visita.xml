<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/marginLeftMaterialList"
    android:layout_marginStart="@dimen/marginLeftMaterialList"
    android:layout_marginRight="@dimen/marginLeftMaterialList"
    android:layout_marginEnd="@dimen/marginLeftMaterialList"
    >
    <TextView
        android:id="@+id/lblVisita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/visita"
        android:layout_marginLeft="@dimen/marginLeftLblVisita"
        android:layout_marginStart="@dimen/marginLeftLblVisita"/>
    <TextView
        android:id="@+id/lblFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTopTxtVisita"
        android:layout_marginLeft="@dimen/marginLeftLblFecha"
        android:layout_marginStart="@dimen/marginLeftLblFecha"
        android:layout_toRightOf="@id/lblVisita"
        android:layout_toEndOf="@id/lblVisita"
        android:textStyle="bold"

        />
    <TextView
        android:id="@+id/lblHora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/marginRightLblHora"
        android:layout_marginEnd="@dimen/marginRightLblHora"
        android:layout_gravity="end"
/>
    <TextView
        android:id="@+id/lblTituloResumen"
        android:layout_width="@dimen/widthLblResumen"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTopLblResumen"

        android:layout_marginLeft="@dimen/marginLeftLblVisita"
        android:layout_marginStart="@dimen/marginLeftLblVisita"

        android:text="@string/resumen"
        />
    <TextView
        android:id="@+id/lblResumen"
        android:layout_width="@dimen/widthLblResumen"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTopLblResumen"

        android:layout_marginLeft="100dp"
        android:layout_marginStart="100dp"
        android:maxLength="31"

        />

</android.support.v7.widget.CardView>

