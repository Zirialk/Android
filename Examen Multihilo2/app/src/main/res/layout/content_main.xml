<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.usuario.examen2.MainActivity"
    tools:showIn="@layout/activity_main">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/lblTituloCiudad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lblCiudad"/>
        <EditText
            android:id="@+id/txtCiudad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblTituloCiudad"
            android:inputType="text" />
        <TextView
            android:id="@+id/lblCiudad"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSizeLblCiudad"
            android:layout_below="@id/txtCiudad"/>


        <ImageView
            android:id="@+id/imgIcono"
            android:layout_width="@dimen/boundImgIcono"
            android:layout_height="@dimen/boundImgIcono"
            android:layout_below="@id/lblCiudad"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/marginRightImgIcono"
            android:layout_marginEnd="@dimen/marginRightImgIcono"
            android:contentDescription="@string/algo" />

        <TextView
            android:id="@+id/lblAlarma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lblAlarma"
            android:layout_below="@id/imgIcono"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />
        <android.support.v7.widget.SwitchCompat
            android:id="@+id/swAlarma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblAlarma"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />
        <TextView
            android:id="@+id/lblDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblCiudad"
            android:layout_marginTop="@dimen/marginTopLblDescripcion"/>

        <TextView
            android:id="@+id/lblTemperatura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTopLblDescripcion"
            android:layout_below="@id/lblDescripcion"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lblLluvia"
            android:layout_below="@id/lblTemperatura"
            android:layout_marginTop="@dimen/marginTopLblDescripcion"/>

        <TextView
            android:id="@+id/lblLluvia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_marginLeft="@dimen/marginLeftLluvia"
            android:layout_marginStart="@dimen/marginLeftLluvia"
            android:layout_marginTop="@dimen/marginTopLblDescripcion"
            android:layout_below="@id/lblTemperatura"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lblHumedad"
            android:layout_below="@id/lblLluvia"
            android:layout_marginTop="@dimen/marginTopLblDescripcion"/>

        <TextView
            android:id="@+id/lblHumedad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblLluvia"
            android:layout_marginTop="@dimen/marginTopLblDescripcion"
            android:layout_marginLeft="@dimen/marginLeftHumedad"
            android:layout_marginStart="@dimen/marginLeftHumedad"
            />
        <TextView
            android:id="@+id/lblTituloViento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lblViento"
            android:layout_below="@id/lblHumedad"
            android:layout_marginTop="@dimen/marginTopLblDescripcion"/>

        <TextView
            android:id="@+id/lblViento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblTituloViento"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lblNubosidad"
            android:layout_below="@id/lblViento"
            android:layout_marginTop="@dimen/marginTopLblDescripcion"
            />
        <TextView
            android:id="@+id/lblNubosidad"
            android:layout_marginTop="@dimen/marginTopLblDescripcion"
            android:layout_marginLeft="@dimen/marginLeftHumedad"
            android:layout_marginStart="@dimen/marginLeftHumedad"
            android:layout_below="@id/lblViento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/lblAmanecer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblNubosidad"
            android:layout_marginTop="@dimen/marginTopLblDescripcion"/>
    </RelativeLayout>
</ScrollView>
