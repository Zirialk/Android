<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <TextView
        android:id="@+id/lblDni"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dni"
        android:textSize="@dimen/sizeText"/>

    <EditText
        android:id="@+id/txtDni"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblDni"/>

    <TextView
        android:id="@+id/lblNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nombre"
        android:textSize="@dimen/sizeText"
        android:layout_below="@id/txtDni"
        android:layout_marginTop="@dimen/paddingTop"/>

    <TextView
        android:id="@+id/lblResultadoNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/noDisponible"
        android:textSize="@dimen/sizeResultado"
        android:layout_below="@id/lblNombre"
        android:layout_marginLeft="@dimen/marginLeft"
        android:layout_marginStart="@dimen/marginLeft"/>

    <TextView
        android:id="@+id/lblEdad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edad"
        android:textSize="@dimen/sizeText"
        android:layout_below="@id/lblResultadoNombre"
        android:layout_marginTop="@dimen/paddingTop"/>

    <TextView
        android:id="@+id/lblResultadoEdad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/noDisponible"
        android:textSize="@dimen/sizeResultado"
        android:layout_below="@id/lblEdad"
        android:layout_marginLeft="@dimen/marginLeft"
        android:layout_marginStart="@dimen/marginLeft"/>
    <Button
        android:id="@+id/btnObtener"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/obtener"
        android:layout_below="@+id/lblResultadoEdad"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/paddingTop"
        android:textSize="@dimen/sizeText"/>



</RelativeLayout>
