<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnCambiar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cambiar"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/marginTopBtnCambiar"
        />
    <FrameLayout
        android:id="@+id/flHueco1"
        android:layout_width="wrap_content"
        android:layout_below="@id/btnCambiar"
        android:layout_height="wrap_content"
        ></FrameLayout>
    <FrameLayout
        android:id="@+id/flHueco2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/flHueco1"

        android:layout_below="@id/btnCambiar"></FrameLayout>
</RelativeLayout>